
{
    "extends": "electron-snowpack/config/tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "paths": {
            "@gui/*": ["gui/*"],
            "@server/*": ["src/server/*"],
            "@common/*": ["common/*"]
        }
    },
}
