
{
    "compilerOptions": {
        "experimentalDecorators": true,
        "strict": true,
        "module": "es2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "noEmit": true,
        "paths": {
            "@gui/*": ["gui/*"],
            "@common/*": ["common/*"]
        }
    },
}
